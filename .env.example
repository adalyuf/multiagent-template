POSTGRES_USER=flutracker
POSTGRES_PASSWORD=flutracker
POSTGRES_DB=flutracker
DATABASE_URL=postgresql://flutracker:flutracker@db:5432/flutracker

# Frontend API base:
# - Leave empty to use same-origin /api (nginx proxy mode)
# - Set to backend origin (or full /api URL) for static frontend hosting
#   Example: https://your-backend.up.railway.app
VITE_API_URL=

# Used by nginx to proxy /api requests to the backend service
# For local docker-compose: http://backend:8000
# For Railway: http://backend.railway.internal:8000
BACKEND_URL=http://backend:8000
